// Criar duas váriaveis e receber valores, somar as duas e multiplicar, após isso será necessário imprimir os resultados.

#include <stdio.h>
// std = Padrão
// io = Input/Output

int main() {
  // declarando as váriaveis 
  int num1, num2, soma, multiplicacao;

  // entrada
  printf("Informe o primeiro número: ");
  scanf("%d", &num1);

  printf("Informe o segundo número: ");
  scanf("%d", &num2);

  // Processamento

  soma = num1+num2;
  multiplicacao = soma * num1;

  // Saída

  printf("O resultado da soma é: %d\n", soma);
  printf("O resultado da multiplicação é: %d\n", multiplicacao);

// colocar \n quando for imprimir os resultados, assim a soma fica de acordo.

  return 0;
  }
