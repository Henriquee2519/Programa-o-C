#include <stdio.h>
// std = Padrão
// io = Input/Output

// ler um numero verificar se ele é par ou impar, quando for par armazenar em p, se for impar armazenar em i
int main() {
  int p, i, n;

  p = 0;
  i = 0;

  
  printf("Digite um número: ", &n);
  scanf("%d", &n);
  
  if (n %2 == 0) {
    p = n;
    printf("O Número é par \n%d", p);
    scanf("%d", &p);
  }

  else {
    i = n;
  printf("O Número é impar \n%d", i);
  scanf("%d", &i);
  }
  

  return 0;
}
