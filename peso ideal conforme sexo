#include <stdio.h>
#include <ctype.h> // biblioteca para poder usar o tolower
// std = Padrão
// io = Input/Output

// tendo como dados de entrada a altura de uma pessoa, construa um algoritmo que calcule seu peso ideal, usando as formulas:
// para homens: (72.7*h) - 58
// para mulheres: (62.1*h) - 44.7

int main() {
  float a, peso_ideal;
  char sexo;

printf("Informe a sua altura: ");
  scanf("%f", &a);
  
gets(stdin); // corrigir bug, se receber numero e depois char, sempre corrigir o bug
  
printf("Informe o seu sexo m/f: ");
  scanf("%c", &sexo);

// usar tolower para que se o usuário colocar o sexo com letra maiúscula não de problema
if (tolower (sexo) == 'm') {
  peso_ideal = (72.7 * a) - 58;
  printf("Seu peso ideal é %.2f ", peso_ideal);

if (tolower(sexo) == 'f') {
  peso_ideal = (62.1 * a) - 44.7;
  printf("Seu peso ideal é %2.f ", peso_ideal);
  }

if (tolower (sexo) != 'm' && tolower (sexo) != 'f'){

  printf("Sexo inválido");
  }
    
return 0;
}}
